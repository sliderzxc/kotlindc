<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.sliderzxc.plugin.kotlindc</id>
    <name>Kotlindc</name>
    <vendor/>

    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij"/>

    <actions>
        <action id="com.sliderzxc.plugin.kotlindc.DecompileToBytecodeAction"
                class="com.sliderzxc.plugin.kotlindc.DecompileToBytecodeAction"
                text="Decompile to Bytecode"
                description="Decompile kotlin file to Bytecode"
                icon="AllIcons.Actions.Compile">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>